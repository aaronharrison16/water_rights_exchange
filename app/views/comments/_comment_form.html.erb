<div class='comment-form'>
    <%= form_for @comment, url: '#' do |f| %>
        <div class='form-group'>
            <%= f.text_area :content, class: 'form-control', placeholder: 'Leave a Comment...' %>
        </div>
        <%= f.submit 'Leave Comment', class: 'btn btn-custom' %>
    <% end %>
</div>