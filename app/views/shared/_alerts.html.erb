<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Water Right Exchange Alert", sticky: false, :on_click => remove_gritter) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Water Right Exchange Error", sticky: false, :on_click => remove_gritter) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Water Right Exchange Notification", sticky: false, :on_click => remove_gritter) %>
<% end %>