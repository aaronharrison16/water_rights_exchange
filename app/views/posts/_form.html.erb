<%= form_for @post, class: 'form-horizontal' do |f| %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Water Right Exchange", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <h4>What is the purpose of your ad?</h4>
    <br>

    <%= f.radio_button :purpose, 'buy' %>
    <%= f.label :purpose, 'Buying' %>

    <%= f.radio_button :purpose, 'sell' %>
    <%= f.label :purpose, 'Selling' %>
  </div>

  <div class="form-group">
    <label for="title" class="control-label">Description:</label>
    <%= f.text_area :title, class: 'form-control', id: 'title' %>  
  </div>

  <div class="mb-3">
    <label for="price" class="control-label">Price Per Share:</label>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text">$</span>
      </div>
      <%= f.number_field :price, class: 'form-control', id: 'price' %>  
      
    </div>
  </div>

  <div class="form-group">
    <label for="available" class="control-label">Shares Available:</label>
    <%= f.number_field :available, class: 'form-control', :step => 0.5, id: 'available' %>  
  </div>

  <div class="form-group">
    <label for="location" class="control-label">Share Region:</label>
    <%= f.text_area :location, class: 'form-control', id: 'location' %>  
  </div>

  <div class="form-group">
    <label for="address" class="control-label">Where is the water used?</label>
    <%= f.text_area :address, class: 'form-control', id: 'address' %>  
  </div>

  <%= render partial: 'status', locals: { f: f } if current_user.type == 'AdminUser' %>
         
  <div class="col-md-4 mb-3">
    <label for="state">State</label>
    <select class="custom-select d-block w-100" id="state" required>
      <option value="">Choose...</option>
      <option>California</option>
    </select>
    <div class="invalid-feedback">
      Please provide a valid state.
    </div>
  </div>

  <%= f.submit 'Save', class: "btn btn-primary btn-lg btn-block" %>

<% end %>
